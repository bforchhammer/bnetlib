{
    "name":        "coss/bnetlib",
    "type":        "library",
    "description": "A Battle.net PHP 5.3 Library",
    "keywords": [
        "wow",
        "world of warcraft",
        "diablo",
        "battle.net",
        "battle",
        "blizzard"
    ],
    "homepage": "http://coss.github.com/bnetlib",
    "license":  "MIT",
    "authors": [
        {
            "name":  "Eric Boh",
            "email": "cossish@gmail.com"
        }
    ],
    "config": {
        "bin-dir": "bin"
    },
    "repositories": [
        {
            "type": "composer",
            "url":  "http://packages.zendframework.com/"
        }
    ],
    "require": {
        "php":                     ">= 5.3.3",
        "zendframework/zend-http": "2.0.*",
    },
    "suggest": {
        "Aura/Http":          "Allows the usage of the Aura adapter.",
        "kriswallsmith/buzz": "Allows the usage of the Buzz adapter."
    },
    "autoload": {
        "psr-0": {
            "bnetlib": "src/"
        }
    }
}
